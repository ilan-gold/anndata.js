{
	"include": ["src/**/*"],
	"compilerOptions": {
		"outDir": "dist",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"moduleDetection": "force",
		"target": "ESNext",
		"lib": ["ESNext"],
		"declaration": true,
		"pretty": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	}
}
