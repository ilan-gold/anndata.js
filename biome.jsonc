{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true,
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "off",
			},
		},
	},
	"overrides": [
		{
			"include": ["**/*.jsonc", "./tsconfig.json", "./.vscode/*.json"],
			"json": {
				"parser": {
					"allowTrailingCommas": true,
				},
				"formatter": {
					"trailingCommas": "all",
				},
			},
		},
	],
	"files": {
		"ignore": ["fixtures", "package.json"],
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
	},
}
